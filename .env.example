# Database Configuration
SQLALCHEMY_DATABASE_URL=mysql+pymysql://username:password@localhost:3306/pocketflow_db
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=pocketflow_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_QUEUE=pfai_tasks

# File Paths
SET_FILE_LIBRARY=/path/to/your/set/file/library
UIPATH_MT4_LIB=/path/to/mt4/library
UIPATH_CONFIG=/path/to/uipath/config.json
OUTPUT_JSON_DIR=/path/to/output/json/directory
LOG_DIR=./logs

# UiPath Configuration
UIPATH_CLI=/path/to/UiPath/CLI/UiRobot.exe
UIPATH_WORKFLOW=/path/to/your/workflow.xaml
UIPATH_JOB_MAX_SECONDS=43200
UIPATH_KILL_FILE=/path/to/kill/file

# Worker Configuration
WORKER_ID=worker_1
USER_ID=system

# Task Management
MAX_ATTEMPTS=3
MAX_FINE_TUNE_DEPTH=2
DISTANCE_THRESHOLD=0.1
SCORE_THRESHOLD=0.8
AGING_FACTOR=1.0

# Supervisor Configuration
JOB_STUCK_THRESHOLD_MINUTES=60
WORKER_INACTIVE_THRESHOLD_MINUTES=5
SUPERVISOR_POLL_INTERVAL=60

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id